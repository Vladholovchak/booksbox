<div class="text-center">
<h1>Books</h1>
<p></p>
    <%= link_to 'New Book', new_book_path, class:"btn btn-sm btn-outline-secondary" %>
  <p></p>

      <div class="blog-post">
  <% @books.each do |book| %>
          <h4 class="blog-post-title">
            <%= link_to book.name, book_path(book) , class: 'navbar-brand' %> </h4>
          <p class="blog-post-meta"> written by <%= book.author %> </p>

          <p class="blog-post-meta">  <%= book.pages %> pages</p>
          <p class="blog-post-meta">  <%= book.price %>  $</p>
     <%= link_to 'Show', book_path(book), class:"btn btn-sm btn-outline-secondary" %> |
      <%= link_to 'Edit', edit_book_path(book), class:"btn btn-sm btn-outline-secondary" %> |
      <%= link_to 'Destroy', book_path(book),class:"btn btn-sm btn-outline-secondary",
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
          <hr>
  <% end %>
      </div>
  <div class="d-flex justify-content-center">
  <div class="digg_pagination">
  <%= will_paginate @books%>
  </div>
  </div>
    </div>
