<h1>Books</h1>
<%= link_to 'New Book', new_book_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th colspan="1"></th>
    <th>Pages</th>
    <th>Price</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.pages %></td>
      <td><%= book.price %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

